@{
    var categories = TempData["Categories"] as ICollection<MB.UI.Models.DTOs.CategoryDto>;
}
@model MB.UI.Models.DTOs.ProductDtos.ProductUpdateDto

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" asp-controller="Home" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="AppUserId"  type="hidden" class="form-control" />
            <input asp-for="Id"  type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="hidden" asp-for="Status" value="true" />
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-control">
                    @if (categories != null)
                    {
                        @foreach (var category in categories)
                        {
                            if(category.Id==Model.CategoryId){
                                <option selected value="@category.Id">@category.Name</option>
                            }
                            else{
                                <option value="@category.Id">@category.Name</option>
                            }
                           
                        }
                    }

                </select>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Home/Index">Back to List</a>
</div>

