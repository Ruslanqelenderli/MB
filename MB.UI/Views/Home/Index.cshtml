@{
    var products = TempData["Products"] as ICollection<MB.UI.Models.DTOs.ProductDto>;
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">
                <a href="/Home/Add/" class="#!">
                    <i class="fa fa-edit">Add New</i>
                </a>
            </th>
            <th scope="col">Name</th>
            <th scope="col">Count</th>
            <th scope="col">User Name</th>
            <th scope="col">Category Name</th>
            <th scope="col">CreateDate</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @{
            var count = 1;
            if(products!=null){
                @foreach (var product in products)
                {
                    <tr>
                        <th scope="row">@count</th>
                        <td>@product.Name</td>
                        <td>@product.Count</td>
                        <td>@product.AppUserDto.Name</td>
                        <td>@product.CategoryDto.Name</td>
                        <td>@product.CreateDate.ToString("dd-MMM,yyyy")</td>
                        <td>

                            <a href="/Home/Update/@product.Id" class="#!">
                                <i class="fa fa-edit">Update</i>
                            </a>

                        </td>
                        <td>

                            <a href="/Home/Delete/@product.Id" class="#!">
                                <i class="fa fa-edit">Delete</i>
                            </a>

                        </td>

                    </tr>
                    count++;
                }
            }
            
        }

    </tbody>
</table>