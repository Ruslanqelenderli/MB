@{
	Layout = null;
}
@model MB.UI.Models.DTOs.LoginDto
<!DOCTYPE html>
<html lang="en">
<head>
	<title>Login V16</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
	<link rel="icon" type="image/png" href="~/Manage/Login/images/icons/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Manage/Login/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Manage/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Manage/Login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Manage/Login/vendor/animate/animate.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="~/Manage/Login/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Manage/Login/vendor/animsition/css/animsition.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Manage/Login/vendor/select2/select2.min.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="~/Manage/Login/vendor/daterangepicker/daterangepicker.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Manage/Login/css/util.css">
	<link rel="stylesheet" type="text/css" href="~/Manage/Login/css/main.css">
<!--===============================================================================================-->
</head>
<body>
	
	<div class="limiter">
		@if (TempData["Registered"] != null)
		{
			<div class="alert alert-success" role="alert">
				@TempData["Registered"]

		    </div>
				TempData["Registered"] = null;
		}
		<div class="container-login100" style="background-image: url('../../wwwroot/Manage/Login/images/bg-01.jpg')">
			<div class="wrap-login100 p-t-30 p-b-50">
				<span class="login100-form-title p-b-41">
					Account Login
				</span>
				<form class="login100-form validate-form p-b-33 p-t-5" asp-action="Login" asp-controller="Manage">

					<div class="wrap-input100 validate-input" data-validate = "Enter username">
						<input class="input100" type="email" asp-for="Email" placeholder="Email">
						<span asp-validation-for="Email" class="focus-input100" data-placeholder="&#xe82a;"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate="Enter password">
						<input class="input100" type="password" asp-for="Password" placeholder="Password">
						<span asp-validation-for="Password" class="focus-input100" data-placeholder="&#xe80f;"></span>
					</div>

					<div class="container-login100-form-btn m-t-32">
						<input class="login100-form-btn" value="Login" type="submit">
						</input>
					</div>

				</form>
			</div>
		</div>
	</div>
	

	<div id="dropDownSelect1"></div>
	
<!--===============================================================================================-->
	<script src="~/Manage/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="~/Manage/Login/vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
	<script src="~/Manage/Login/vendor/bootstrap/js/popper.js"></script>
	<script src="~/Manage/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="~/Manage/Login/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="~/Manage/Login/vendor/daterangepicker/moment.min.js"></script>
	<script src="~/Manage/Login/vendor/daterangepicker/daterangepicker.js"></script>
<!--===============================================================================================-->
	<script src="~/Manage/Login/vendor/countdowntime/countdowntime.js"></script>
<!--===============================================================================================-->
	<script src="js/main.js"></script>

</body>
</html>
